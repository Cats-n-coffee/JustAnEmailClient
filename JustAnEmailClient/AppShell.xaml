<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JustAnEmailClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:JustAnEmailClient"
    xmlns:pages="clr-namespace:JustAnEmailClient.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="False">

    <ShellContent
        ContentTemplate="{DataTemplate pages:LoadingPage}"
        Route="LoadingPage"/>

    <ShellContent
        ContentTemplate="{DataTemplate pages:EmailClientPage}"
        Route="EmailClientPage" />
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />
</Shell>
