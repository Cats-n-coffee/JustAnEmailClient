<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JustAnEmailClient.Views.NewMessagePage"
             BackgroundColor="{StaticResource Gray900}">

    <Grid RowDefinitions="140, *, 50">

        <Grid Grid.Row="0" RowDefinitions="*, *" ColumnDefinitions="*, *">
            <Label Grid.Row="0" Grid.Column="0" Text="To:" HorizontalOptions="Fill"/>
            <Entry
                Grid.Row="0" Grid.Column="1"
                Text="{Binding SentTo}"
                BackgroundColor="{StaticResource Gray900}"
                MinimumWidthRequest="500"
                HorizontalOptions="Fill"/>
            <Label Grid.Row="1" Grid.Column="0" Text="Subject:"/>
            <Entry
                Grid.Row="1" Grid.Column="1"
                Text="{Binding Subject}"
                BackgroundColor="#333333"
                MinimumWidthRequest="500"
                HorizontalOptions="Fill"/>
        </Grid>
            
        <VerticalStackLayout Grid.Row="1">
            <Editor
                Text="{Binding MessageContent}"
                HeightRequest="350"
                BackgroundColor="#333333"/>
        </VerticalStackLayout>

        <HorizontalStackLayout Grid.Row="2">
            <Button Text="Send"/>
            <Button Text="Delete"/>
        </HorizontalStackLayout>
    </Grid>

</ContentPage>